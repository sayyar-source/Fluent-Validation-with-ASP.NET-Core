@model User

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title">Edit Profile</h4>
                            <p class="card-category">Complete your profile</p>
                        </div>
                        <div class="card-body">
                            <form action="useredit" method="post">
                                <div class="row">

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Username </label>
                                            <input type="text" asp-for="UserName" value="" name="UserName" class="form-control">
                                            <span asp-validation-for="@Model.UserName"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Email address</label>
                                            <input type="email" asp-for="Email" value="" name="Email" class="form-control">
                                            <span asp-validation-for="Email"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Phone</label>
                                            <input type="text" asp-for="Phone" value="" name="Phone" class="form-control">
                                            <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Fist Name</label>
                                            <input type="text" asp-for="FirstName" value="" name="FirstName" class="form-control">
                                            <span asp-validation-for="@Model.FirstName"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Last Name</label>
                                            <input type="text" asp-for="LastName" value="" name="LastName" class="form-control">
                                            <span asp-validation-for="@Model.LastName"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">StudentNumber</label>
                                            <input type="text" asp-for="StudentNumber" value="" name="StudentNumber" class="form-control">
                                            <span asp-validation-for="@Model.StudentNumber"></span>

                                        </div>
                                    </div>
                                </div>

                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Instageram</label>
                                            <input type="text" value="" name="SocialAddress" class="form-control">
                                            <span asp-validation-for="@Model.SocialAddress"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Address</label>
                                            <input type="text" asp-for="@Model.Address" value="" name="Address" class="form-control">
                                            <span asp-validation-for="@Model.Address"></span>
                                        </div>
                                    </div>
                                    

                                </div>

                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">Password</label>
                                            <input type="text" asp-for="Password" value="" name="Password" class="form-control">
                                            <span asp-validation-for="@Model.Password"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="bmd-label-floating">ConfirmPassword</label>
                                            <input type="text" asp-for="ConfirmPassword" value="" name="ConfirmPassword" class="form-control">
                                            <span asp-validation-for="@Model.ConfirmPassword"></span>
                                        </div>
                                    </div>
                                    

                                </div>

                                <button type="submit" class="btn btn-primary pull-right">Update Profile</button>
                                <div class="clearfix"></div>
                            </form>
                        </div>
                    </div>
                </div>


                
               
            </div>
        </div>
    </div>
